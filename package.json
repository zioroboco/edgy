{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "12.16.1"
  },
  "scripts": {
    "postinstall": "yarn -s compile:build || yarn -s compile",
    "compile:build": "yarn -s log-build && wsrun tsc --build &> /dev/null",
    "log-build": "echo 'ğŸ”©  Building type declarations...'",
    "wsrun": "wsrun --no-prefix --report",
    "test": "jest",
    "compile": "yarn -s wsrun compile",
    "eslint": "eslint . --ext .ts,.tsx",
    "prettier": "prettier --check '**/*'",
    "lint": "yarn -s compile && yarn -s eslint && yarn -s prettier",
    "lint:fix": "yarn -s compile && yarn -s eslint --fix && yarn -s prettier --write",
    "stack": "yarn -s workspace stack"
  },
  "dependencies": {
    "@types/jest": "*",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-only-warn": "^1.0.2",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
    "jest": "^25.3.0",
    "jest-circus": "^25.3.0",
    "prettier": "^2.0.4",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3",
    "wsrun": "^5.2.0"
  }
}
