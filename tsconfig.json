{
  "compilerOptions": {
    "noEmit": true,
    "pretty": true,
    "lib": ["esnext"],
    "target": "esnext",
    "module": "commonjs",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true
  },
  "include": ["lib/**/*.ts"]
}
